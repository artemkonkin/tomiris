@using System.Text
@model IEnumerable<tomiris.Models.BlogPostModel>

@{
    ViewData["Title"] = "Мои заметки";
}

<div class="inline-flex items-center justify-start bg-white w-full" style="height: 59px;">
    <p class="text-xl font-semibold text-gray-900" style="width: 50%;">@ViewData["Title"]</p>
</div>


<div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">

    @foreach (var item in Model)
    {

        // TODO Вот тут мне не нравится эта конструкция 
        
        string text; 
        if(item.Text.Length < 200)
        {
            text = item.Text;
        }
        else
        {
            text = item.Text.Substring(0,200);
        }

        <div class="transition inline-flex flex-col space-y-4 items-start justify-start col-span-1 p-4 bg-white border border-gray-300 hover:shadow-2xl hover:border-white">
            <a asp-action="Details" asp-route-id="@item.Id">
                <p class="w-full text-lg font-semibold text-gray-900">@Html.DisplayFor(modelItem => item.Name)</p>
            </a>
            <p class="w-full text-sm text-gray-900 h-full" id="blog-text">
                @Html.DisplayFor(modelItem => text)
            </p>
            <div class="inline-flex space-x-1 items-center justify-start w-full">
                <div class="flex space-x-1 items-center justify-start h-full w-full">
                    <p class="text-xs text-right text-gray-400">Автор: </p>
                    <p class="text-xs text-gray-400">@Html.DisplayFor(modelItem => item.User.Email)</p>
                </div>
            </div>
        </div>
    }

</div>