@{
  ViewData["Title"] = "Create";
}

<div class="container">
  @using (Html.BeginForm("BlogPost", "Create", FormMethod.Post))
  {
    <div class="inline-flex space-x-32 items-center justify-between py-0.5 bg-white" style="width: 100%; height: 30px;">
      <p class="text-xl font-semibold text-gray-900">Создать заметку</p>
      <div class="inline-flex space-x-4 items-center justify-end">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="inline-flex text-sm items-center">Отмена
          <img src="~/img/icons/close.svg" alt="" style="padding: 8px;">
        </a>
        <a href="" type="submit" class="inline-flex text-sm items-center text-blue-700">Сохранить
          <img src="~/img/icons/save.svg" alt="" style="padding: 8px;">
        </a>
      </div>
    </div>

    <div class="input" style="width: 100%;">
      <label>Название заметки</label><br />
      <input type="text" placeholder="Название" name="name" />
    </div>
    <br />
    <div class="input" style="width: 100%;">
      <label>Текст заметки</label><br />
      <textarea name="text" rows="4" cols="50" style="height: 50vh;"></textarea>
    </div>
  }
</div>

