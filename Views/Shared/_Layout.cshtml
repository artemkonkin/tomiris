<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NOTER</title>
    <link href="~/css/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>

@{
    if(User.Identity.Name != null){
        ViewData["userName"] = User.Identity.Name;
    }
    else
    {
        ViewData["userName"] = "Авторизоваться";
    }
    
}

<body>

    <header>
        <div class="container mx-auto" style="padding-top: 40px; padding-bottom: 40px;">
            <nav class="inline-flex shadow-2xl bg-white w-full p-4 items-center justify-between rounded-lg">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="w-28 h-full" src="~/img/logo.svg" />
                </a>
                <ul class="inline-flex justify-items-end space-x-4 items-center">
                    <li>
                        <a class="text-sm text-gray-900 link" asp-area="" asp-controller="Home"
                        asp-action="Index">Заметки</a>
                    </li>
                    <li>
                        <a class="text-sm text-gray-900 link" asp-area="" asp-controller="Home"
                        asp-action="Privacy">Лицензия</a>
                    </li>
                    <li class="inline-flex items-center space-x-4">
                        <a class="text-sm text-gray-900 link text-blue-700"
                            style="display: inline-block; white-space: nowrap; overflow: hidden;" asp-area=""
                            asp-controller="BlogPost" asp-action="Index">
                            @ViewData["userName"]
                        </a>
                        <div class="userPanel rounded-lg bg-white shadow-2xl p-4"
                            style="top: 90px; right: 16px; width: 300px; height: 300px;">
                            <p>Panel</p>
                        </div>
                        <img src="https://lh3.googleusercontent.com/ogw/ADGmqu8vYULQkIb0eq6ndRKsP2MXvgyuibVlazOtUKUqRA=s32-c-mo"
                            alt="" style="height: 36px;" class="rounded-lg" />
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="container mx-auto shadow-md rounded-lg p-4" style="min-height: 80vh;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="container mx-auto rounded-lg p-4">
        <div class="inline-flex items-center justify-center py-2 px-96" style="width: 100%; height: 30px;">
            <p class="text-xs text-gray-800">
                NOTER © 2021 by Artem Konkin is licensed under Attribution-ShareAlike 4.0 International
            </p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
