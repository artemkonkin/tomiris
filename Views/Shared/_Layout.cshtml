<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - tomiris</title>
    <link href="~/css/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>

    <header>
        <div class="container mx-auto" style="padding-top: 40px; padding-bottom: 40px;">
            <div class="inline-flex space-x-96 items-center justify-between bg-white"
                style="width: 100%; height: 30px;">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="w-28 h-full rounded-lg" src="~/img/logo.svg" />
                </a>
                <div class="flex space-x-8 items-center justify-start">
                    <a class="text-sm text-gray-900 link" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                    <a class="text-sm text-gray-900 link" asp-area="" asp-controller="Home" asp-action="Privacy">Лицензия</a>
                    <a class="text-sm text-gray-900 link" asp-area="" asp-controller="Test" asp-action="Index">Тесты</a>
                    <a class="text-sm text-gray-900 link" asp-area="" asp-controller="Hash" asp-action="Index">Хэш</a>
                    <a class="text-sm text-gray-900 link" asp-area="" asp-controller="BlogPost" asp-action="Index">Заметки</a>
                    <div class="inline-flex space-x-2 items-center justify-end w-44 h-8">
                        <a class="text-sm text-gray-900 link" asp-area="" asp-controller="Hash" asp-action="Index">username@gmail.com</a>
                        <img src="~/img/avatar.png" alt="" style="width: 100%; height: auto;">
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container mx-auto shadow-2xl rounded-lg p-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="container mx-auto rounded-lg p-4">
        <div class="inline-flex items-center justify-center py-2 px-96" style="width: 100%; height: 30px;">
            <p class="text-xs text-gray-800">
                &copy; 2021 - tomiris - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
